{
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "./build",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "promises/*": ["./promises/src/*"]
    },
    "pretty": true,
    "target": "ESNext"
  },
  "include": ["**/src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
